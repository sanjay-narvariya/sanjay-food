<style>
  body {
    margin: 0;
  }

  .maincontainer {
    background-image: url("/images/foodbackground.png");
    background-size: 100% 100%;
    width: 100%;
    height: 96%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Poppins';
  }

  .box {
    background: pink;
    background-size: auto;
    width: 95%;
    border-radius: 10px;
    padding: 20px;
    border: 5px solid gray;
  }

  .heading {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .headingstyle {
    margin-left: 10px;
    font-size: 18px;
    font-weight: bold;
  }

  .btncenter {
    display: flex;
    justify-content: center;
  }

  .btnsize {
    margin-top: 5px;
    width: 80%;
  }

  .addpic {
    width: 40px;
    height: 40px;
    border-radius: 10px;
  }
</style>

<html>

<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="/javascripts/project.js"></script>
</head>
<form action="/food/submit_food" method="post" enctype="multipart/form-data">
  <div class="maincontainer">
    <div class="box">


      <div class="row">
        <div class="col-12">
          <div class="heading">
            <img src="/images/logo.png" width="80" />
            <div class="headingstyle">Food Register</div>
            <div style="margin-left: auto;">
              <a href="/food/display_all_food"><img src="/images/displayfoodicon.png" class="addpic" /></a>
            </div>

          </div>
        </div>
      </div>


      <div class="row" style="margin-top: 10px;">
        <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
          <select required name="categoryid" id="categoryid" class="form-select">
            <option selected>Select Category</option>

          </select>
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
          <select required name="subcategoryid" id="subcategoryid" class="form-select">
            <option selected>Select Subcategory</option>

          </select>
        </div>
        <div class="col-xs-12  col-sm-12 col-lg-4" style="margin-bottom: 5px;">
          <input required type="text" class="form-control" name="foodname" id="foodname" placeholder="Food Name......">
        </div>
      </div>

      <div class="row" style="margin-top: 5px;">
        <div class="col-lg-6">
          <textarea class="form-control" name="ingredients" rows="2">Ingredients</textarea>
        </div>


        <div class="col-lg-6">
          <textarea class="form-control" name="description" rows="2">Descriptions</textarea>
        </div>
      </div>

      <div class="row" style="margin-top: 10px;">
        <div class="col-xs-12 col-sm-12 col-lg-6">
          <input type="text" class="form-control" name="price" placeholder="Price..">
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-6" style="margin-top: 5px;">
          <input type="text" class="form-control" name="offerprice" placeholder="Offer Price..">
        </div>
      </div>

      <div class="row" style="margin-top: 10px;">

        <div class="col-xs-12 col-sm-12 col-lg-3" style="display: flex; justify-content: center; align-items: center;">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="foodtype" id="foodtype" value="veg">
            <label class="form-check-label" for="foodtype">Veg</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="foodtype" id="foodtype" value="nonveg">
            <label class="form-check-label" for="foodtype">Non-Veg</label>
          </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-lg-3" style="margin-top: 5px;">
          <select name="status" id="status" class="form-select">
            <option selected>Select Status</option>
            <option>Continue</option>
            <option>Discontinue</option>
          </select>
        </div>

        <div class="col-xs-12 col-sm-12 col-lg-1" style="margin-top: 5px;">
          <img id="fp">
        </div>

        <div class="col-xs-12 col-sm-12 col-lg-5" style="margin-top: 5px;">
          <input onchange="showPicture()" class="form-control" type="file" name="foodpicture" id="foodpicture">
        </div>

      </div>

      <div class="row" style="margin-top: 20px;">
        <div class="col-xs-12 col-sm-12 col-lg-6 btncenter">
          <button type="submit" class="btn btn-primary btnsize">Submit</button>
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-6 btncenter">
          <button type="reset" class="btn btn-primary btnsize">Reset</button>
        </div>
      </div>

      <div class="row" style="margin-top: 20px;">
        <div class="col-xs-12 col-sm-12 col-lg-12 btncenter">
          <%=message %>
        </div>
      </div>



    </div>
  </div>
</form>

</html>